root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true

[{*.sht, *.html, *.shtm, *.shtml, *.htm}]
indent_size = 4

[{*.jhm, *.xslt, *.xul, *.rng, *.xsl, *.xsd, *.ant, *.qrc, *.tld, *.fxml, *.jrxml, *.xml, *.jnlp, *.wsdl}]
indent_size = 4

[*.svg]
indent_size = 4

[{*.h, *.cc, *.ii, *.cpp, *.mm, *.tcc, *.hxx, *.hp, *.hh, *.cxx, *.hpp, *.m, *.i, *.c, *.h++, *.icc, *.c++, *.pch, *.inl, *.cp}]
indent_size = 4

[{CMakeLists.txt, *.cmake}]
indent_size = 4

[{*.pyw, *.py}]
indent_size = 4
max_line_length = 120

[*.ui]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_size = 4

[.editorconfig]
indent_size = 4
